@model HousingSManagement.Models.House

@{
    ViewData["Title"] = "Delete House";
}

<h2>Delete House</h2>

<p>Are you sure you want to delete this house?</p>

<table class="table">
    <tr><th>Owner Name:</th><td>@Model.OwnerName</td></tr>
    <tr><th>House Number:</th><td>@Model.HouseNumber</td></tr>
    <tr><th>Block:</th><td>@Model.Block</td></tr>
    <tr><th>Phone Number:</th><td>@Model.PhoneNumber</td></tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
